{
  "name": "uncrate",
  "version": "1.0.0-beta.4",
  "description": "Minimal documentation generator based on file structure",
  "keywords": [
    "static",
    "markdown",
    "documentation",
    "generator",
    "structure"
  ],
  "homepage": "https://github.com/bitpshr/uncrate#readme",
  "bugs": "https://github.com/bitpshr/uncrate/issues",
  "license": "WTFPL",
  "author": "bitpshr <mail@bitpshr.net> (https://bitpshr.net/)",
  "bin": "./uncrate.js",
  "repository": "github:bitpshr/uncrate",
  "scripts": {
    "format": "prettier --write **/*.{js,json,css,md}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "package.json",
          "package-lock.json"
        ],
        "options": {
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  },
  "dependencies": {
    "directory-tree": "^2.1.1",
    "ejs": "^2.6.1",
    "fs-extra": "^7.0.1",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.0.2",
    "markdown-it-highlightjs": "^3.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "pretty-hrtime": "^1.0.3",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "1.15.3"
  }
}
